<% if user_signed_in? %>
  <% groups2 = Group.where(user_id: current_user) %>
  <% if groups2.present? %>
    <% groups2.each do |k| %>
      <div class="cat-div shadow-sm">
        <i class="material-icons just-the-i icon-b shadow outlined"><%= k.icon %></i>
        <p class="p"><%= link_to k.name, group_path(k) %></p>
        <p class="p"><%= k.entities.where(user_id: current_user).sum(:amount) %>$</p>
      </div>
    <% end %>
  <% else %>
    <p>No groups found.</p>
  <% end %>
  <%= link_to "Add category", new_group_path, class: "btn btn-primary bg-gradient bi-plus-circle w-100 my-3" %>
<% else %>
  <section class="d-flex flex-column justify-content-between">
    <i class="material-icons just-the-i icon-b shadow outlined text-center mb-3">paid</i>
    <h1 class="text-center my-3">Budget App</h1>
    <%= link_to "Log in", '/users/sign_in', class: "btn btn-primary my-2 w-100 p-3" %><br />
    <%= link_to "Sign up", '/users/sign_up', class: "btn btn-secondary my-2 w-100 p-3" %><br />
  </section>
<% end %>
